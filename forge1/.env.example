# Forge 1 Platform Environment Configuration
# Copy this file to .env and fill in your actual configuration
# This file contains shared environment variables for the entire platform

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================

# Database Configuration
POSTGRES_DB=${POSTGRES_DB:-forge1}
POSTGRES_USER=${POSTGRES_USER:-forge1_user}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-CHANGE_ME_POSTGRES_PASSWORD}
POSTGRES_HOST=${POSTGRES_HOST:-postgres}
POSTGRES_PORT=${POSTGRES_PORT:-5432}

# Redis Configuration
REDIS_PASSWORD=${REDIS_PASSWORD:-CHANGE_ME_REDIS_PASSWORD}

# Grafana Configuration
GF_SECURITY_ADMIN_USER=${GF_SECURITY_ADMIN_USER:-admin}
GF_SECURITY_ADMIN_PASSWORD=${GF_SECURITY_ADMIN_PASSWORD:-CHANGE_ME_GRAFANA_PASSWORD}

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Frontend Port
FRONTEND_PORT=3000

# Backend Port
BACKEND_PORT=8000

# Database Port
DATABASE_PORT=5432

# Redis Port
REDIS_PORT=6379

# Prometheus Port
PROMETHEUS_PORT=9090

# Grafana Port
GRAFANA_PORT=3001

# =============================================================================
# VOLUME CONFIGURATION
# =============================================================================

# Data Persistence
POSTGRES_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
PROMETHEUS_DATA_PATH=./data/prometheus
GRAFANA_DATA_PATH=./data/grafana

# Log Storage
BACKEND_LOGS_PATH=./logs/backend
FRONTEND_LOGS_PATH=./logs/frontend

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================

# Backend Scaling
BACKEND_REPLICAS=1
BACKEND_MEMORY_LIMIT=2g
BACKEND_CPU_LIMIT=1.0

# Frontend Scaling
FRONTEND_REPLICAS=1
FRONTEND_MEMORY_LIMIT=1g
FRONTEND_CPU_LIMIT=0.5

# Database Scaling
POSTGRES_MEMORY_LIMIT=2g
POSTGRES_CPU_LIMIT=1.0

# Redis Scaling
REDIS_MEMORY_LIMIT=512m
REDIS_CPU_LIMIT=0.5
