# Forge 1 Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual configuration

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Forge 1
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Internal API URL (for server-side requests)
API_URL=http://forge1-backend:8000

# =============================================================================
# AUTHENTICATION
# =============================================================================

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# =============================================================================
# PAYMENT & BILLING
# =============================================================================

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PRICE_ID_STARTER=price_your-starter-plan-id
NEXT_PUBLIC_STRIPE_PRICE_ID_PROFESSIONAL=price_your-professional-plan-id
NEXT_PUBLIC_STRIPE_PRICE_ID_ENTERPRISE=price_your-enterprise-plan-id

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=forge1-frontend

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# UI Features
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_PWA=true

# AI Features
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true

# Enterprise Features
NEXT_PUBLIC_ENABLE_COMPLIANCE_DASHBOARD=true
NEXT_PUBLIC_ENABLE_AUDIT_LOGS=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_METRICS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Upload
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.csv,.xlsx

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development URLs
NEXT_PUBLIC_DEV_API_URL=http://localhost:8000
NEXT_PUBLIC_DEV_WS_URL=ws://localhost:8000

# Debug Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false